@model CarServPro.Razor.Models.CustomerDTO
@{
    ViewData["Title"] = "Login";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>@TempData["Success"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<section class="py-5">
    <div class="container-fluid px-5">
        <h2 class="text-center mb-5">Login</h2>

        @if (ViewBag.Message != null)
        {
            <p class="text-danger text-center">@ViewBag.Message</p>
        }

        <div class="row justify-content-center">
            <div class="col-12">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-4">
                        <input asp-for="Email" class="form-control form-control-lg" placeholder="Email" style="height: 60px;" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <input asp-for="Password" class="form-control form-control-lg" placeholder="Password" style="height: 60px;" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100" style="height: 60px;">Login</button>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
